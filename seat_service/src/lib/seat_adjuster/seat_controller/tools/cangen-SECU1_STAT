if [ "$1" = "--help" ]; then
    echo "Usage: $0 <can_if> {timeout}"
    echo "  can_if - use specified can interface. Default: can0"
    echo "  timeout - delay between random frames. default 1000ms."
    exit 0
fi

CAN=$1
[ -z "$CAN" ] && CAN="can0"

TIMEOUT=$2
[ -z "$TIMEOUT" ] && TIMEOUT=1000

cangen -v "$CAN" -L 8 -I 714 -D r -g "$TIMEOUT"


